<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.4.0/bootbox.min.js"></script>
<script src="~/Content/select2/js/select2.full.min.js"></script>

<script>

    var getUrl = window.location
    var aURL = getUrl.protocol + "//" + getUrl.host + "/" + getUrl.pathname.split('/')[1] + "/";


    postData("Leave/GetOrgForDropDown", "", "getOrg", "Action");

    function postData(api, inputData, aBy, aTyp) {
        $.ajax({
            type: "POST",
            url: aURL + api,
            data: JSON.stringify(inputData),
            dataType: "JSON",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                PostDone(data, aBy, aTyp);
            },
            error: function (err) {
                window.location.href = aURL;
                //alert("Something went wrong");
            }
        });
    }


    PostDone = function (data, aBy, aTyp) {

        if (aTyp === "Action") {

            if (aBy === "getOrg") {

                if (data) {
                    $.each(data, function (Key, value) {

                        $('#orgSelect').append(
                            $('<option></option>').val(value.Id).text(value.Name));


                    });


                }
            }

            else if (aBy === "getEmp") {
                if (data) {
                    $.each(data, function (Key, value) {

                        $('#empSelect').append(
                            $('<option></option>').val(value.Id).text(value.FullName));


                    });


                }
            }

        }
    }

    $('.select2').select2({
        theme: 'bootstrap4'
    });

    //Initialize Select2 Elements
    $('.select2bs4').select2({
        theme: 'bootstrap4'
    });


</script>

