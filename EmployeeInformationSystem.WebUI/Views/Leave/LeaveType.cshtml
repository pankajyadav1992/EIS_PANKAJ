@model EmployeeInformationSystem.Core.Models.LeaveType

@{
    ViewBag.Title = "Leave Type";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/bootstrap-select")
@Styles.Render("~/Content/gijgo")

<div class="container-fluid" style="position:relative">
    <div class="container-fluid">
        <div class="row" id="reportDisplayBlock">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        Leave Type
                    </div>


                    @using (Html.BeginForm("AddLeaveType", "Leave", FormMethod.Post, new { @class = "form-horizontal", @data_heading = "Add Leave Type" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="card-body" id="reportDisplayBody">
                            <div class="form-group row">
                                <label class="col-sm-3 form-control-label">Leave Type</label>
                                <div class="col-sm-5">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @type = "text", @data_type = "text" } })
                                </div>
                                <div class="form-group row offset-sm-3">
                                    <div classs="col-sm-9" style="display:none;color: red;" id="errorname">Please Enter Leave Name</div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <input type="submit" value="Add" class="btn btn-primary" id="reportSubmitBtn">
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts{
    @Scripts.Render("~/bundles/bootstrap-select")
    @Scripts.Render("~/bundles/gijgo")
<script>
    $(document).ready(function () {
        $(document).on('click', '#reportSubmitBtn', function (e) {
           var isValid = true;
           var australianDate = /^(?=\d)(?:(?:31(?!.(?:0?[2469]|11))|(?:30|29)(?!.0?2)|29(?=.0?2.(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00)))(?:\x20|$))|(?:2[0-8]|1\d|0?[1-9]))([-./])(?:1[012]|0?[1-9])\1(?:1[6-9]|[2-9]\d)?\d\d(?:(?=\x20\d)\x20|$))?(((0?[1-9]|1[012])(:[0-5]\d){0,2}(\x20[AP]M))|([01]\d|2[0-3])(:[0-5]\d){1,2})?$|^$/;


            if ($("#@Html.IdFor(model => model.Name)").val() == "")
            {
                $("#errorname").show(); isValid = false;
            }
            else
            {
                $("#errorname").hide();
            }


            if (!isValid) {
                e.preventDefault(); //prevent the default action
            } else {
                $('#overlay').fadeIn(); // show spinner
            }
           });
        });
</script>

}