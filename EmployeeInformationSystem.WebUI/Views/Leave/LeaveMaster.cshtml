@model EmployeeInformationSystem.Core.Models.LeaveMasterList

@{
        ViewBag.Title = "LeaveMaster";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h2>Leave Master</h2>



@using (Html.BeginForm("TenureCompletionReport", "Reports", FormMethod.Post, new { @class = "form-horizontal", @id = "customReportSelectionForm", @data_heading = "Tenure Completion Report" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group row">
        <label class="col-sm-3 form-control-label">Organisation</label>
        <div class="col-sm-5">
            <select name="selectEmployeeOption" class="form-control selectEmployeeOption" id="selectEmployeeByName" style="min-width:80%;" data-live-search="true">
                <option value="" selected>--Select Organisation--</option>
                @foreach (var employee in ViewBag.OrganisationList)
                {
                    <option value="@employee.Id" data-employeetype="@employee.Name">@employee.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row offset-sm-3">
        <div classs="col-sm-9" style="display:none;color: red;" id="errorColumns">Please select columns</div>
    </div>

    <div class="form-group row">
        <label class="col-sm-3 form-control-label">Leave Type</label>
        <div class="col-sm-5">
            <select name="selectEmployeeOption" class="form-control selectEmployeeOption" id="selectEmployeeByName" style="min-width:80%;" data-live-search="true">
                <option value="" selected>--Select Leave Type--</option>
                @foreach (var employee in ViewBag.LevelTypeList)
                {
                    <option value="@employee.Id" data-employeetype="@employee.Name">@employee.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row offset-sm-3">
        <div classs="col-sm-9" style="display:none;color: red;" id="errorColumns">Please select columns</div>
    </div>


    <div class="form-group row">
        @Html.LabelFor(model => model.AnnualQuota, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.AnnualQuota, new { htmlAttributes = new { @class = "form-control", @type = "text", @data_type = "text" } })
        </div>
        <div classs="col-sm-4" style="display:none;color: red;" id="errorToDate">Please input valid date</div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ValidFrom, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.ValidFrom, new { htmlAttributes = new { @class = "form-control", @type = "text", @data_type = "date" } })
        </div>
        <div classs="col-sm-4" style="display:none;color: red;" id="errorFromDate">Please input valid date</div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.ValidTill, htmlAttributes: new { @class = "col-sm-3 form-control-label" })
        <div class="col-sm-5">
            @Html.EditorFor(model => model.ValidTill, new { htmlAttributes = new { @class = "form-control", @type = "text", @data_type = "date" } })
        </div>
        <div classs="col-sm-4" style="display:none;color: red;" id="errorToDate">Please input valid date</div>
    </div>






    <div class="form-group row">
        <div class="col-sm-9 offset-sm-3">
            <input type="submit" value="Generate Report" class="btn btn-primary" id="reportSubmitBtn">
        </div>
    </div>
}


<script>
        $(document).ready(function () {
        $(document).on('click', '#reportSubmitBtn', function (e) {
           var isValid = true;
           var australianDate = /^(?=\d)(?:(?:31(?!.(?:0?[2469]|11))|(?:30|29)(?!.0?2)|29(?=.0?2.(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00)))(?:\x20|$))|(?:2[0-8]|1\d|0?[1-9]))([-./])(?:1[012]|0?[1-9])\1(?:1[6-9]|[2-9]\d)?\d\d(?:(?=\x20\d)\x20|$))?(((0?[1-9]|1[012])(:[0-5]\d){0,2}(\x20[AP]M))|([01]\d|2[0-3])(:[0-5]\d){1,2})?$|^$/;

            @*if (0 == $('#@Html.IdFor(model => model.Categories) :selected').length) {
               $("#errorDepartment").show(); isValid = false;
           } else {
                $("#errorDepartment").hide();
           }*@

           if (0 == $('#working :selected').val()) {
               $("#errorworking").show(); isValid = false;
           } else {
               $("#errorworking").hide();
           }

           if (!australianDate.test($("#@Html.IdFor(model => model.ValidFrom)").val())) {
               $("#errorFromDate").show(); isValid = false;
               console.log($("#@Html.IdFor(model => model.ValidFrom)").val());
           } else {
               $("#errorFromDate").hide();
           }

           if (!australianDate.test($("#@Html.IdFor(model => model.ValidTill)").val())) {
               console.log($("#@Html.IdFor(model => model.ValidTill)").val());
               $("#errorToDate").show(); isValid = false;
           } else {
                $("#errorToDate").hide();
           }



            if (!isValid) {
                e.preventDefault(); //prevent the default action
            } else {
                $('#overlay').fadeIn(); // show spinner
            }
           });
        });
</script>