@model EmployeeInformationSystem.Core.Models.PayScale

@{
    Layout = null;
}


@using (Html.BeginForm("PayScale", "MasterData", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "manageForm", @data_formtype = ViewBag.Mode }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id, new { Value = @Model.Id })

    if ("Delete" == ViewBag.Mode)
    {
        <div class="alert alert-warning" role="alert">
            Are you sure?
            This will delete this payscale and its dependent data!
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Scale, htmlAttributes: new { @class = "col-3 form-control-label" })
            <div class="col-9">
                @Html.HiddenFor(model => model.Scale, new { Value = @Model.Scale })
                @Html.EditorFor(model => model.Scale, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.Scale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Organisation.Name, htmlAttributes: new { @class = "col-3 form-control-label" })
            <div class="col-9">
                @Html.HiddenFor(model => model.OrganisationId, new { Value = @Model.OrganisationId })
                @Html.EditorFor(model => model.Organisation.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.OrganisationId, "", new { @class = "text-danger" })
            </div>
        </div>
    }

    else
    {

        <div class="form-group row">
            @Html.LabelFor(model => model.Scale, htmlAttributes: new { @class = "col-3 form-control-label" })
            <div class="col-9">
                @Html.EditorFor(model => model.Scale, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Scale, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Organisation.Name, htmlAttributes: new { @class = "col-3 form-control-label" })
            <div class="col-9">
                @Html.HiddenFor(model => model.OrganisationId, new { Value = @Model.OrganisationId })
                @Html.EditorFor(model => model.Organisation.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" }, Value = Model.Organisation.Name })
                @Html.ValidationMessageFor(model => model.OrganisationId, "", new { @class = "text-danger" })
            </div>
        </div>
    }
}

