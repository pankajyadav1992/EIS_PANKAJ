@model EmployeeInformationSystem.Core.Models.Designation

@{
    Layout = null;
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "manageDesignation", @data_formtype = "register" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id, new { Value = @Model.Id })

        

        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-3 form-control-label" })
            <div class="col-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Organisation.Name, htmlAttributes: new { @class = "col-3 form-control-label" })
            <div class="col-9">
                @Html.HiddenFor(model => model.OrganisationId, new { Value = @Model.OrganisationId })
                @Html.EditorFor(model => model.Organisation.Name, new { htmlAttributes = new { @class = "form-control", @disabled="disabled" } })
                @Html.ValidationMessageFor(model => model.OrganisationId, "", new { @class = "text-danger" })
            </div>
        </div>
}

