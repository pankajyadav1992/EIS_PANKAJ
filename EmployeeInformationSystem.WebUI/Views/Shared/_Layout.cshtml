<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Employee Information System</title>
    <meta name="description" content="DGH Employee Information System">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!--CSS-->
    @Styles.Render("~/Content/css")

    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">

    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    @RenderSection("CustomStyles", required: false)
</head>
<body>
    <div class="page">
        <!-- Main Navbar-->
        <header class="header">
            <nav class="navbar">
                <!-- Search Box-->
                <div class="search-box">
                    <button class="dismiss"><i class="icon-close"></i></button>
                    <form id="searchForm" action="#" role="search">
                        <input type="search" placeholder="What are you looking for..." class="form-control">
                    </form>
                </div>
                <div class="container-fluid">
                    <div class="navbar-holder d-flex align-items-center justify-content-between">
                        <!-- Navbar Header-->
                        <div class="navbar-header">
                            <!-- Navbar Brand --><a href="index.html" class="navbar-brand d-none d-sm-inline-block">
                                <div class="brand-text d-none d-lg-inline-block"><span><img src="~/Content/img/dgh_transparent.png" height="35" /></span><strong> Employee Information System</strong></div>
                                <div class="brand-text d-none d-sm-inline-block d-lg-none"><strong>BD</strong></div>
                            </a>
                            <!-- Toggle Button--><a id="toggle-btn" href="#" class="menu-btn active"><span></span><span></span><span></span></a>
                        </div>
                        <!-- Navbar Menu -->
                        <ul class="nav-menu list-unstyled d-flex flex-md-row align-items-md-center">



                            <!-- Logout    -->
                            <li class="nav-item"><a href="@Url.Action("Login","Home")" class="nav-link logout"> <span class="d-none d-sm-inline">Logout</span><i class="fa fa-sign-out"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="page-content d-flex align-items-stretch">
            <!-- Side Navbar -->
            <nav class="side-navbar">
                <!-- Sidebar Header-->
                <div class="sidebar-header d-flex align-items-center">
                    <div class="avatar"><img src="~/Content/img/no-profile-pic-icon.jpg" alt="..." class="img-fluid rounded-circle"></div>
                    <div class="title">
                        <h1 class="h4">Administrator</h1>
                        <p>Data Admin</p>
                    </div>
                </div>
                <!-- Sidebar Navidation Menus--><span class="heading">Main</span>
                                                <ul class="list-unstyled">
                                                    <li @RenderSection("Home", required: false)><a href="@Url.Action("Index", "Home")"> <i class="icon-home"></i>Home </a></li>
                                                    <li>
                                                        <a href="#DataManageDropdown" aria-expanded="false" data-toggle="collapse"><i class="fa fa-database"></i>Employee Data</a>
                                                        <ul id="DataManageDropdown" class="collapse list-unstyled @RenderSection("DataManage",required:false)">
                                                            <li @RenderSection("AddEmployee", required: false)><a href="@Url.Action("Add", "EmployeeData")"><i class="fa fa-user-plus"></i>Add Employee</a></li>
                                                            <li @RenderSection("ViewEmployee", required: false)><a href="@Url.Action("ViewEmployee", "EmployeeData")"><i class="fa fa-address-card"></i>View Employee Data</a></li>
                                                            <li><a href="#"><i class="fa fa-edit"></i>Update Record</a></li>
                                                            <li><a href="#"><i class="fa fa-trash"></i>Delete Record</a></li>
                                                        </ul>
                                                    </li>
                                                    <li>
                                                        <a href="#GenerateReportsDropdown" aria-expanded="false" data-toggle="collapse"><i class="fa fa-bar-chart"></i>Generate Reports</a>
                                                        <ul id="GenerateReportsDropdown" class="collapse list-unstyled ">
                                                            <li><a href="#"><i class="fa fa-user-circle"></i>Active Employess</a></li>
                                                            <li><a href="#"><i class="fa fa-times-rectangle"></i>Inactive Employees</a></li>
                                                            <li><a href="#"><i class="fa fa-users"></i>All Employees</a></li>
                                                        </ul>
                                                    </li>
                                                    <li><span class="heading">Administrator Section</span></li>
                                                    <li @RenderSection("Admin", required: false)><a href="@Url.Action("Index", "Home")"> <i class="fa fa-key"></i>Master Data </a></li>
                                                </ul>
            </nav>
            <div class="content-inner">
                @RenderBody()
                <!-- Page Footer-->
                <footer class="main-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>Directorate General of Hydrocarbons &copy; 2019</p>
                            </div>
                            <div class="col-sm-6 text-right">
                                <p>Designed by IT Team, DGH</p>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <!-- JavaScript files-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jquerycookie")
    @*@Scripts.Render("~/bundles/chart")*@
    @Scripts.Render("~/bundles/jqueryval")
    @*@Scripts.Render("~/bundles/charts-home")*@
    <!-- Main File-->
    @Scripts.Render("~/bundles/front")

    @RenderSection("scripts", required: false)
</body>
</html>
