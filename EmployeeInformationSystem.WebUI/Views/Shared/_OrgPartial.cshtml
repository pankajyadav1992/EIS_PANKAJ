@model EmployeeInformationSystem.Core.Models.LeaveBalance
@{
    //ViewBag.Title = "LeaveMaster";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/bootstrap-select")
@Styles.Render("~/Content/gijgo")  
<div>
    @if (@ViewBag.orgName != null)
    {
        <div class="form-group row">
            <label class="form-control-label col-sm-3 d-flex justify-content-center">Organisation</label>
            <div class="col-sm-4">
                <input class=" form-control" type="text" value="@ViewBag.orgName" disabled />
                <input class=" form-control" type="hidden" value="@ViewBag.orgID" name="OrganisationId" />
                <table class="table table-bordered">
                    <thead>
                        <tr><th>Leave Type</th><th>No. of Leaves Due</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var item in @ViewBag.Balance)
                        {
                            <tr>
                                <td> @item.LeaveType </td>
                                <td>@item.LeaveCount </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm-4">
                <div classs="col-sm-9 align-left" style="display:none;color: red;" id="errorOrganisationId">Please Select Employee Name</div>
            </div>
        </div>
        <div class="form-group row">
            <label class="form-control-label col-sm-3 d-flex justify-content-center">Type of Leave</label>
            <div class="col-sm-4">
                <select name="LeaveTypeId" class="form-control" id="selectLeaveTypeName" style="min-width:80%;" data-live-search="false">
                    <option value="0" selected>--Select Leave Type--</option>
                    @foreach (var leavetype in @ViewBag.LevelTypeList)
                    {
                        <option value="@leavetype.LeaveId" data-employeetype="@leavetype.LeaveType">@leavetype.LeaveType</option>
                    }
                </select>
            </div>
            <div class="col-sm-4">
                <div classs="col-sm-9 align-left" style="display:none;color: red;" id="errorLeaveId">Please Select Leave Type</div>
            </div>
        </div>
    }
    else
    {
        <div class="form-group row">
            <label class="form-control-label col-sm-3 d-flex justify-content-center">Organisation</label>
            <div class="col-sm-4">
                <select name="OrganisationId" class="form-control selectEmployeeOption" id="selectOrganisationByName" style="min-width:80%;" data-live-search="false">
                    <option value="0" selected>--Select Organisation--</option>
                </select>
            </div>
            <div class="col-sm-4">
                <div classs="col-sm-9 align-left" style="display:none;color: red;" id="errorOrganisationId">Please Select Employee Name</div>
            </div>
        </div>
        <div class="form-group row">
            <label class="form-control-label col-sm-3 d-flex justify-content-center">Type of Leave</label>
            <div class="col-sm-4">
                <select name="LeaveTypeId" class="form-control" id="selectLeaveTypeName" style="min-width:80%;" data-live-search="false">
                    <option value="0" selected>--Select Leave Type--</option>
                </select>
            </div>
            <div class="col-sm-4">
                <div classs="col-sm-9 align-left" style="display:none;color: red;" id="errorLeaveId">Please Select Leave Type</div>
            </div>
        </div>
    }
</div>
